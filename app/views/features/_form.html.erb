<%= simple_form_for(@feature) do |f| %>
  <%= f.error_notification %>

	<div class="row-fluid">
	  <div class="span12">
	    <p>Stories make up boards. Use stories to describe how to accomplish a boards goals</p>
	    <div class="row-fluid">
	      <div class="span8">
	        <%= f.input :title,:input_html => { :rows => 1 , :class => "span12"}, :label => "1 - Name it" %>
			<%= f.input :gherkin, :as => :text, :input_html => { :rows => 8 , :class => "span12 ckeditor"}, :label => "3 - Describe the story" %>
	      </div>
	      <div class="span4"><%if @feature.photo.exists?%><%= image_tag @feature.photo(:original) %><%else%><%end%><%= f.input :photo, :label => "2 - Add a photo which represents the story" %></div>
	    </div>
	  	<div class="row-fluid">
	      <div class="span12">
	        
	      </div>
	    </div>
	  </div>
	</div>


  <div class="form-actions">
    <%= f.button :submit,"Save story to board", class: "btn btn-small btn-primary" %>
  </div>
<% end %>
