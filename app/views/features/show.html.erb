
<!DOCTYPE html>
<html lang="en">
<% 
	
	p = @feature.parent_doc_list
	@doc = Doc.find(p[0])
	owner = @doc.owner_list
%>
<%if @doc.pdoc == 1%>
	<%if current_user.following?(@doc) == true%>
		<%= render "features/show" %>
	<%else%>
		<% if owner.include?(String(current_user.id)) == true  %> 
			<%= render "features/show" %>
		<%end%>
	<%end%>
<%else%>
		<%= render "features/show" %>
<%end%>

</html>

