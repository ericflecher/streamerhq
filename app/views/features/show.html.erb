
<!DOCTYPE html>
<html lang="en">
<% 
	u = User.find(@feature.owner_list) 
	p = @feature.parent_doc_list
	@doc = Doc.find(p[0])
%>
<%if @doc.pdoc == 1%>
	<%if current_user.following?(@doc) == true%>
		<%= render "features/show" %>
	<%else%>
		<% if current_user.id == u[0].id  %> 
			<%= render "features/show" %>
		<%end%>
	<%end%>
<%else%>
		<%= render "features/show" %>
<%end%>

</html>

