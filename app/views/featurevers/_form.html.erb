<%= simple_form_for(@featurever) do |f| %>
  <%= f.error_notification %>


   <h3>Create a new story</h3>
	
		<div class="row-fluid">
		  <div class="span12">
		    <p>Stories make up boards. Use stories to describe how to accomplish a boards goals</p>
		    <div class="row-fluid">
		      <div class="span6">
		        <%= f.input :title,:input_html => { :rows => 1 , :class => "span6"}, :label => "1 - Name it" %>
		      </div>
		      <div class="span6"><%= f.input :photo, :label => "2 - Add a photo which represents the story" %></div>
		    </div>
		  	<div class="row-fluid">
		      <div class="span12">
		        <%= f.input :gherkin, :as => :text, :input_html => { :rows => 8 , :class => "span12"}, :label => "3 - Describe the story" %>
		      </div>
		    </div>
		  </div>
		</div>

	  	<%= f.button :submit,"Save story to board", class: "btn btn-small btn-primary" %>
      

<% end %>
