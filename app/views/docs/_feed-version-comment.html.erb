
<%
	u = User.find(@feed.user_id)
	v = Featurever.find(@feed.featurever_id)
	
%>



<blockquote >
	<%if v.photo.exists?%><%= image_tag v.photo(:medium) %><%else%><%end%>
  <p>Comment on <%= link_to v.title, versions_path(:feature_id => v.featureid)%>: <%=@feed.message%>
	  <small> <cite title="Source Title"><%if User.exists?(@feed.user_id)%><%= link_to u.name, u %><%else%>Author unknown<%end%>, <%= @feed.created_at.strftime("%m/%d/%Y")%></cite></small></p>
</blockquote>


