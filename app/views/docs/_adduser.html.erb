<div id="adduser" class="modal" style="display: none;">
  	
	<%= simple_form_for @users, :url => adduser_path(current_user), :html => {:method => :put, :class => 'form-horizontal' } do |f| %>
	
	
		<div class="modal-header">
	      <a class="close" data-dismiss="modal">&#215;</a>
	      <h3>Invite a follower</h3>
	    </div>
	
		<div class="modal-body">
			<p><%= f.input :email, :collection => @users %></p>
	    </div>
		
	
	    <div class="modal-footer">
	      <%= f.submit "Invite", :class => "btn" %>
	      <a class="btn" data-dismiss="modal" href="#">Close</a>
	    </div>
	  <% end %>
	
</div>