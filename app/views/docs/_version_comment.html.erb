<div id="version_comment-<%=@currentversion.id%>" class="modal hide fade" style="display: none;">
  	
	<%= form_tag(create_version_comment_return_feature_path(:version_id => @currentversion.id, :doc_id => @doc.id), :html => {:method => :put, :class => 'form-horizontal' }) do %>
	  
		<div class="modal-header">
	      <a class="close" data-dismiss="modal">&#215;</a>
	      <h3>Save a comment</h3>
	    </div>
	
	    <div class="modal-body">
			<p><%= text_area_tag "commenttext", ""%></p>
	    </div>
	    <div class="modal-footer">
	      <%= submit_tag("Add Comment", class: "btn btn-small btn-primary") %>
	      <a class="btn" data-dismiss="modal" href="#">Close</a>
	    </div>
		
	  	
	<% end %>
	
</div>