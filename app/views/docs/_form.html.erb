<%= simple_form_for(@doc) do |f| %>
  <%= f.error_notification %>

	<div class="row-fluid">
	  <div class="span12">
	    <p>Boards are used to get stuff done. To create a board:</p>
	    <div class="row-fluid">
	      <div class="span8">
	        <%= f.input :title,:input_html => { :rows => 1 , :class => "span8"}, :label => "1 - Name it" %>
			<%= f.input :description, :as => :text, :input_html => { :rows => 8 , :class => "span8"}, :label => "2 - Define success for this board" %>
	      </div>
	      <div class="span4"><%if @doc.photo.exists?%><%= image_tag @doc.photo(:original) %><%else%><%end%><%= f.input :photo, :label => "3 - Add a photo which represents the board" %></div>
	    </div>
	  	<div class="row-fluid">
	      <div class="span12">
	        
	      </div>
	    </div>
	  </div>
	</div>

  <div class="form-actions">
     <%= f.button :submit,"Save board description", class: "btn btn-small btn-primary" %>
  </div>
<% end %>
