<!DOCTYPE html>
<html lang="en">

<% @features.each do |feature| %>

<div class="row-fluid">
  <div class="span8"><%= link_to feature.title, feature %></div>
</div>

<div class="row-fluid">
  <%if feature.photo.exists?%>
  	<div class="span8"><%= image_tag feature.photo(:original) %>
  <%else%>
  <%end%>

	<div class="well well-small"><%= feature.gherkin %></div>
	<% @f = feature %>
	<a data-toggle="modal" href="#feature_comment-<%= @f.id%>" class="btn btn-mini pull-right" type="button">Add your feedback</a> 
   </div>
	<div class="span4" class="">
		<p><h4>Feedback on <%= feature.title %></4h></p>
		<%@all_feature_comments = feature.comment_threads%>
		<%@all_feature_comments.each do |comments| %>
			
			<blockquote >
			  <p><%=comments.body%></p>
			  <small> <cite title="Source Title"><%= User.find(comments.user_id).name%></cite></small>
			</blockquote>
			
		<%end%>
		
      	<%= render "docs/feature_comment" %>
	</div>
</div>

	<% @subfeatures = feature.following_features%>
	<% @subfeatures.each do |subfeature| %>
		<div class="row-fluid">
	  		<div class="span7 offset1"><%= subfeature.title %></div>
		</div>

		<div class="row-fluid">
	  		<%if subfeature.photo.exists?%>
	  			<div class="span7 offset1"><%= image_tag subfeature.photo(:original) %>
	  		<%else%>
	  		<%end%>
				<div class="well well-small"><%= subfeature.gherkin %></div>
				<% @sf = subfeature %>
				<a data-toggle="modal" href="#subfeature_comment-<%= @sf.id%>" class="btn btn-mini pull-right" type="button">Add your feedback</a> 
				</div>	
				<div class="span4" class="well well-small pull-right">
					<p><h4>Feedback on <%= subfeature.title %></4h></p>
					<%@all_subfeature_comments = subfeature.comment_threads%>
					<%@all_subfeature_comments.each do |comments| %>

						<blockquote >
						  <p><%=comments.body%></p>
						  <small> <cite title="Source Title"><%= User.find(comments.user_id).name%></cite></small>
						</blockquote>

					<%end%>

			      	<%= render "docs/subfeature_comment" %>
				</div>
		</div>
	<% end %> 
	
<% end %>


</html>

