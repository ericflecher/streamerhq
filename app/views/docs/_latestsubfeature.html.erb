<% 

	u = User.find(@feature.owner_list)
	owner = @feature.owner_list
	p = @feature.parent_doc_list
	
	@doc = Doc.find(p[0])
	docowner = @doc.owner_list
	
	
 %>


<div class="row-fluid">
  <div class="span7 offset1">	
      <ul class="nav">
		<li class="dropdown">
		  <a class="dropdown-toggle" href="#"><h4 class="media-heading"><%= link_to @currentsubversion.title, @subfeature %> <b class="caret"></b></h4>
		  </a>
		  <ul class="dropdown-menu">
			<% if owner.include?(String(current_user.id)) == true  %> 
				<li> <%= link_to "Edit", new_featurever_path(:feature_id => @subfeature.id) %> </li>
	  									
			<%else%>
							
			<%end%>
			<li><%= link_to "Versions", versions_path(:feature_id => @subfeature.id) %></li>
			<li><a data-toggle="modal" href="#version_comment-<%= @currentsubversion.id%>">Create comment</a></li>
						
		  </ul>
		</li>
      </ul>
  
  </div>
  <div class="span4"></div>
</div>


<div class="row-fluid">
  <div class="span7 offset1"><%if @currentsubversion.photo.exists?%><%= image_tag @currentsubversion.photo(:original) %><%else%><%end%>
  	<div class="well well-small"><%= @currentsubversion.gherkin %></div>
	<%@currentversion = @currentsubversion%>

  </div>

   <%= render "features/version_comment" %>
  <div class="span4" class="">

		<%@all_feature_comments = @currentsubversion.comment_threads%>
		<% if @all_feature_comments.length == 0 %> <%else%><p><h4>Feedback on <%= @currentsubversion.title %></4h></p><%end%>
		<%@all_feature_comments.each do |comments| %>
			<%u = User.find(comments.user_id)%>
			<blockquote >
			  <p><%=comments.body%></p>	<% if current_user.id == comments.user_id %> 
							<%= button_to('Remove', remove_version_comment_path(:version_id => @currentversion.id, :comment_id => comments.id), :class => 'btn btn-mini pull-right')%>
							<%else%> <%end%>
			  <small> <cite title="Source Title"><%if User.exists?(comments.user_id)%><%= link_to u.name, u %><%else%> Author unknown<%end%>, <%= comments.created_at.strftime("%m/%d/%Y %I:%M")%></cite></small>
			</blockquote>
		<%end%>

    </div>
</div>
<div class="row-fluid">
</div>


