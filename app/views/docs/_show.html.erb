<% u = User.find(@doc.owner_list) %>
<% 
	owner = @doc.owner_list
	version = @doc.version_list
	session[:doc_id] = @doc.id
%>

<%= #debug session[:feature_id]
%>
<%= #debug session[:doc_id]
%>
<%= #debug session[:parent_story_id]
%>

	<% if owner.include?(String(current_user.id)) == true   %> 

		<div class="row">
		  <div class="span3">
				<a data-toggle="modal" href="/features/#newsection" class="btn btn-mini btn-primary" type="button">New Story</a>
					<%= render "features/newsection" %>
		  </div>
		  <div class="span8"></div>
		  <div class="span1"><a data-toggle="modal" href="#addfollower" class="btn btn-mini btn-primary" type="button">Admin</a></div>
		</div>
	
		<%= render "docs/addfollower" %>
	<%else%>
	<%end%>

 <div class="row-fluid">
  	<div class="span10"><p><% if current_user.id == u[0].id %>   
		
	<%else%> 
	
	<% if owner.include?(String(current_user.id)) == true  %>
	
	<%else%>
		<%if current_user.following?(@doc) == true%>

			<%= button_to('Unfollow', follow_path(:doc_id => @doc.id, :follow_code => 'u'), :class => 'btn btn-small btn-primary')%>

		<%else%>
			<%= button_to('Follow', follow_path(:doc_id => @doc.id, :follow_code => 'f'), :class => 'btn btn-small btn-primary')%>
		<%end%>
	<%end%>
	
	<%end%></p><p><h4><%= @doc.title %></4h><small> v-<%= version[0]%></small></p> <p><small>By: <%= link_to u[0].name, user_path(u[0]) %></small></p></div>
	<div class="span2">
		
	</div>
</div>


 <div class="row-fluid">
  <div class="span8">	<%if @doc.photo.exists?%>
		<%= image_tag @doc.photo(:original) %>
	<%else%>
	<%end%>
	<div class="well well-small">
		<%= @doc.description %>
	</div>
	<a data-toggle="modal" href="#comment" class="btn btn-mini btn-primary pull-right" type="button">Add your feedback</a>
 </div>
	<div class="span4" class="well well-small pull-right">
		<% if @all_comments.length == 0 %> <%else%><p><h4>Feedback on <%= @doc.title %></4h></p> <%end%> 
		
		<%@all_comments.each do |comments| %>
			
			<blockquote >
			  <p><%=comments.body%>	 <% if current_user.id == comments.user_id %> 
				<%= button_to('Remove', remove_comment_path(:doc_id => @doc.id, :comment_id => comments.id), :class => 'btn btn-mini pull-right')%>
				<%else%> <%end%> 
			  <small> <cite title="Source Title"><%if User.exists?(comments.user_id)%><%= User.find(comments.user_id).name%><%else%>Author unknown<%end%></cite></small>
				
			</blockquote>
			
		<%end%>
		
		
      	<%= render "docs/comment" %>
	</div>
</div>


 <div class="row-fluid">
  	<%=render "docs/features"%>
</div>

<% if owner.include?(String(current_user.id)) == true   %> 

	<div class="row">
	  <div class="span3">	<a data-toggle="modal" href="/features/#newsection" class="btn btn-mini btn-primary" type="button">New Story</a>
			<%= render "features/newsection" %></div>
	  <div class="span8"></div>
	  <div class="span1"></div>
	</div>

<%else%>
<%end%>
