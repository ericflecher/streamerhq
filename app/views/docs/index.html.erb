
<!DOCTYPE html>
<html lang="en">
  

<% @docs.each do |doc| %>

<div class="row-fluid">
  <div class="span2">
	
  </div>
	<div class="span4">
		<p><%= link_to doc.title, doc_path(doc) %></p>
		<%if doc.photo.exists?%>
			<p><%= image_tag doc.photo(:medium) %></p>
		<%else%>
		<%end%>
		<div class="well well-small"><%= doc.description %>
		</div>
		<div class="">
			<% u = User.find(doc.owner_list) %>
			<% if current_user.id == u[0].id %> <%= link_to 'Edit', edit_doc_path(doc) %> | <%= link_to 'Delete', doc, method: :delete, data: { confirm: 'Are you sure?' } %> <%else%> <%end%>
		</div>
	</div>
	<div class="span6">
		<%@d = doc%>
		<%= render "docs/ifeatures" %>
	</div>

</div>
<div class="row-fluid">
	<div class="span2">
	</div>
</div>
<% end %>



<%= link_to 'New Doc', new_doc_path %>

</html>