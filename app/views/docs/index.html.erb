    <div class="<%= if params[:tab] == 'tab2' then 'tab-pane active'  else 'tab-pane' end%>" id="tab2">

		<% @docs.each do |doc| %>
			
			<% 	
				u = User.find(doc.owner_list)
				owner = doc.owner_list		
			 %>
			
			<% if owner.include?(String(current_user.id)) == true  %>
			
				<div class="media">
				  <a class="pull-left" href= <%=doc_path(doc)%>>
					<%if doc.photo.exists?%>
						<p><%= image_tag doc.photo(:medium) %></p>
					<%else%>
					<%end%>
				  </a>
				  <div class="media-body">
				    <h4 class="media-heading"><%= link_to doc.title, doc_path(doc) %></h4>
				    <%= doc.description %>
					<p>
						
						<% if owner.include?(String(current_user.id)) == true  %> <%= link_to 'Edit', edit_doc_path(doc) %> | <%= link_to 'Delete', doc, method: :delete, data: { confirm: 'Are you sure?' } %> <%else%> <%end%>
