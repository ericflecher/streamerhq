<html lang="en">

<a data-toggle="modal" href="#newboard" class="btn btn-mini btn-primary" type="button">New Board</a>
<p></p>

<div class="nav nav-tabs">
<ul class="nav nav-tabs">
    <li class="<%= 'active' if params[:tab] == 'tab1' %>"><a href="#tab1" data-toggle="tab">Feed</a></li>
    <li class="<%= 'active' if params[:tab] == 'tab2' %>"> <a href="#tab2" data-toggle="tab">Boards I Own</a></li>
