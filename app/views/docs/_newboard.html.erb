
<div id="newboard" class="modal hide fade" style="display: none;">
	<%
		@doc = Doc.new
	%>

	<%= simple_form_for(@doc) do |f| %>
	  <%= f.error_notification %>
	
	<div class="modal-header">
      	<a class="close" data-dismiss="modal">&#215;</a>
      	<h3>Create a new board</h3>
	</div>
	
	<div class="modal-body">
		<div class="row-fluid">
		  <div class="span12">
		    <p>Boards are used to get stuff done. To create a board:</p>
		    <div class="row-fluid">
		      <div class="span6"><%= f.input :title,:input_html => { :rows => 1 , :class => "span6"}, :label => "1 - Name it" %></div>
		      <div class="span6"><%= f.input :photo, :label => "2 - Add a photo which represents the board" %></div>
		    </div>
		  </div>
		<div class="row-fluid">
		    <div class="span12">
		      <div class="span12"><%= f.input :description, :as => :text, :input_html => { :rows => 8 , :class => "span12"}, :label => "3 - Define success for this board. Keep this under 250 characters." %></div>
			  
			     
		    </div>
		  </div>

		</div>
		    	
	</div>


	<div class="modal-footer">
	  	<%= f.button :submit,"Create Board", class: "btn btn-small btn-primary" %>
      	<a class="btn" data-dismiss="modal" href="#">Close</a>
 	</div>
	<% end %>
</div>